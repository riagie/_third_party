{
  "name": "node-nestjs",
  "version": "0.0.1",
  "description": "The Node Framework.",
  "keywords": [
    "framework",
    "laravel"
  ],
  "author": "",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "set NODE_ENV=sandbox && nodemon --watch src --ext ts --exec nest start",
    "start:dev": "set NODE_ENV=sandbox && nodemon --watch src --ext ts --exec nest start",
    "start:debug": "set NODE_ENV=sandbox && nodemon --watch src --ext ts --exec --debug nest start",
    "start:prod": "set NODE_ENV=production && node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "typeorm": "typeorm-ts-node-commonjs",
    "schema:sync": "npx typeorm-ts-node-commonjs schema:sync -d ./src/app.connection.ts",
    "typeorm:cache": "npx typeorm-ts-node-commonjs cache:clear -d ./src/app.connection.ts",
    "schema:drop": "npx typeorm-ts-node-commonjs schema:drop -d ./src/app.connection.ts",
    "migration:create": "npx typeorm-ts-node-commonjs migration:create ./src/migrations/schema-update",
    "migration:generate": "npx typeorm-ts-node-commonjs migration:generate ./src/migrations/schema-update -d ./src/app.connection.ts",
    "migration:show": "npx typeorm-ts-node-commonjs migration:show -d ./src/app.connection.ts",
    "migration:run": "npx typeorm-ts-node-commonjs migration:run -d ./src/app.connection.ts",
    "migration:revert": "npx typeorm-ts-node-commonjs migration:revert -d ./src/app.connection.ts",
    "seeder:run": "ts-node -r tsconfig-paths/register ./src/database/db.seeder.ts",
    "schematic:run": "powershell -ExecutionPolicy Bypass -File .generate.ps1"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.2.2",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/platform-fastify": "^10.3.8",
    "@nestjs/typeorm": "^10.0.2",
    "bcrypt": "^5.1.1",
    "glob": "^10.3.15",
    "mysql2": "^3.9.7",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.20",
    "typeorm-extension": "^3.5.1",
    "winston": "^3.13.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/config": "^3.3.4",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.3.1",
    "@types/passport-jwt": "^4.0.1",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
